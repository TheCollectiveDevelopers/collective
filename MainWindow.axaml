<Window xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  SizeToContent="WidthAndHeight"
  Background="Transparent"
  x:Class="collective.MainWindow"
  Title="collective"
  Classes="window">
  <Border 
    CornerRadius="15" 
    Background="#1A1A1A"
    Padding="20"
    BorderThickness="1"
    BorderBrush="#22ffffff"
    Height="500"
    Width="169">
    <StackPanel
      VerticalAlignment="Center">
      <Image 
        Source="avares://collective/Assets/drop-basket.png"
        Width="60"/>
      <TextBlock
        FontFamily="{StaticResource GeistMedium}"
        FontWeight="{StaticResource GeistMediumWeight}"
        Margin="0 10"
        FontSize="14"
        TextWrapping="WrapWithOverflow"
        TextAlignment="Center">
        Drag and Drop my Balls
      </TextBlock>
    </StackPanel>
  </Border>
</Window>
