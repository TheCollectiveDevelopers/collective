<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Collective</Name>
    <Version>1.0.0</Version>
    <Title>Collective Installer</Title>
    <Publisher>Collective</Publisher>
    <StartMenuDir>Collective</StartMenuDir>
    <TargetDir>@ApplicationsDir@/Collective</TargetDir>
    <InstallerWindowIcon>installer-icon</InstallerWindowIcon>
    <InstallerApplicationIcon>installer-icon</InstallerApplicationIcon>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <AllowSpaceInPath>true</AllowSpaceInPath>

    <!-- Online installer and update configuration -->
    <RemoteRepositories>
        <Repository>
            <Url>https://collectiveboard.pages.dev/packages</Url>
            <Enabled>1</Enabled>
            <DisplayName>Collective Updates</DisplayName>
        </Repository>
    </RemoteRepositories>

    <!-- Maintenance tool configuration -->
    <MaintenanceToolName>MaintenanceTool</MaintenanceToolName>
    <AllowUnstableComponents>false</AllowUnstableComponents>
    <ControlScript>controlscript.qs</ControlScript>

    <!-- Update settings -->
    <RunProgram>@TargetDir@/appcollective.exe</RunProgram>
    <RunProgramDescription>Launch Collective</RunProgramDescription>
</Installer>
